<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherMenuActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/menuTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="149dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="37dp"
        android:text="@string/message_account"
        android:textColor="?attr/actionMenuTextColor"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/createButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/createButton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="54dp"
        android:text="@string/button_create_list"
        app:layout_constraintBottom_toTopOf="@+id/visualizeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuTextView" />

    <Button
        android:id="@+id/visualizeButton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="49dp"
        android:text="@string/button_display_list"
        app:layout_constraintBottom_toTopOf="@+id/manageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createButton" />

    <Button
        android:id="@+id/disconnectionButton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="86dp"
        android:text="@string/button_disconnect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manageButton" />

    <Button
        android:id="@+id/manageButton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="@string/button_create_course"
        app:layout_constraintBottom_toTopOf="@+id/disconnectionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visualizeButton" />
</android.support.constraint.ConstraintLayout>